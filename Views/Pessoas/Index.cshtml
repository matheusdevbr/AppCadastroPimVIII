@model IEnumerable<AppCadastro.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Pessoas cadastradas:</h1>

<p>
    <a asp-action="Create">Adicionar nova Pessoa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                <a asp-route-id="@item.Id" asp-action="Edit">Editar</a> |
                <a asp-route-id="@item.Id" asp-action="Edit">Endereço</a> |
                <a asp-route-id="@item.Id" asp-action="Delete">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
